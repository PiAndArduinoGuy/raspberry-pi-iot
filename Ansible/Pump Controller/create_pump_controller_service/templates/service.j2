[Unit]
Description= Starts the Pump Controller jar.

[Service]
ExecStart= java -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=18081 -Dcontrol-hub.host={{control_hub_host_ip_address}} -Dspring.rabbitmq.host={{control_hub_host_ip_address}} -jar "{{pump_controller_deploy_location}}/{{pump_controller_jar_name}}.jar"
StandardOutput=append:{{pump_controller_deploy_location}}/logs/pump-controller.log
StandardError=append:{{pump_controller_deploy_location}}/logs/pump-controller.log

[Install]
WantedBy=multi-user.target